import requests
import pandas as pd

def fetch_grafana_dashboards(grafana_url, user, password, output_file):
    api_url = f"{grafana_url}/api/search"
    
    try:
        response = requests.get(api_url, auth=(user, password), verify=False)
        response.raise_for_status()
        
        dashboards = response.json()
        dashboard_names = [dash['title'] for dash in dashboards if 'title' in dash]
        
        df = pd.DataFrame(dashboard_names, columns=['Dashboard Name'])
        df.to_excel(output_file, index=False)
        
        print(f"Dashboard names saved to {output_file}")
    except requests.exceptions.RequestException as e:
        print(f"Error fetching dashboards: {e}")

# Example usage
grafana_url = "https://your-grafana-instance.com"
user = "your-username"
password = "your-password"
output_file = "grafana_dashboards.xlsx"

fetch_grafana_dashboards(grafana_url, user, password, output_file)
